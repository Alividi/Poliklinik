<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pasien.TambahTekananDarahPasienActivity"
    android:layout_margin="20dp">

    <ImageButton
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:id="@+id/btnBackTambahTekananDarahPasien"
        android:src="@drawable/arrow_left_black_flat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/transparent"
        android:layout_marginTop="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tekanan Darah"
        android:labelFor="@id/btnBackTambahTekananDarahPasien"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnBackTambahTekananDarahPasien"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/img_jam"
        android:id="@+id/ivTglWaktu"
        app:layout_constraintTop_toBottomOf="@id/btnBackTambahTekananDarahPasien"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="31dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal dan Waktu"
        android:fontFamily="@font/poppins_bold"
        android:textSize="13sp"
        android:textColor="@color/purple"
        app:layout_constraintTop_toTopOf="@id/ivTglWaktu"
        app:layout_constraintBottom_toBottomOf="@id/ivTglWaktu"
        app:layout_constraintStart_toEndOf="@id/ivTglWaktu"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        android:labelFor="@id/etTglTekananDarah"
        android:id="@+id/tvTglTekananDarah"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/purple"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivTglWaktu"
        android:layout_marginTop="20dp"/>
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:id="@+id/etTglTekananDarah"
        android:inputType="date"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11sp"
        android:textColor="@color/purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTglTekananDarah"
        android:background="@drawable/et_border_input"
        android:layout_marginTop="13dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waktu"
        android:labelFor="@id/etWaktuTekananDarah"
        android:id="@+id/tvWaktuTekananDarah"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/purple"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etTglTekananDarah"
        android:layout_marginTop="13dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:id="@+id/etWaktuTekananDarah"
        android:inputType="time"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11sp"
        android:textColor="@color/purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWaktuTekananDarah"
        android:background="@drawable/et_border_input"
        android:layout_marginTop="13dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="20dp"
        android:src="@drawable/img_laporan"
        android:id="@+id/ivInformasi"
        app:layout_constraintTop_toBottomOf="@id/etWaktuTekananDarah"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informasi"
        android:fontFamily="@font/poppins_bold"
        android:textSize="13sp"
        android:textColor="@color/purple"
        app:layout_constraintTop_toTopOf="@id/ivInformasi"
        app:layout_constraintBottom_toBottomOf="@id/ivInformasi"
        app:layout_constraintStart_toEndOf="@id/ivInformasi"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batas Atas"
        android:labelFor="@id/etBatasAtasTekananDarah"
        android:id="@+id/tvBatasAtasTekananDarah"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/purple"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivInformasi"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:id="@+id/etBatasAtasTekananDarah"
        android:inputType="number"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11sp"
        android:textColor="@color/purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvSatuanTDarah1"
        app:layout_constraintTop_toBottomOf="@id/tvBatasAtasTekananDarah"
        android:background="@drawable/et_border_input"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSatuanTDarah1"
        android:text="mm Hg"
        android:textColor="@color/new_grey"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/etBatasAtasTekananDarah"
        app:layout_constraintBottom_toBottomOf="@id/etBatasAtasTekananDarah"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batas Bawah"
        android:labelFor="@id/etBatasBawahTekananDarah"
        android:id="@+id/tvBatasBawahTekananDarah"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/purple"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etBatasAtasTekananDarah"
        android:layout_marginTop="13dp"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:id="@+id/etBatasBawahTekananDarah"
        android:inputType="number"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11sp"
        android:textColor="@color/purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvSatuanTDarah2"
        app:layout_constraintTop_toBottomOf="@id/tvBatasBawahTekananDarah"
        android:background="@drawable/et_border_input"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSatuanTDarah2"
        android:text="mm Hg"
        android:textColor="@color/new_grey"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/etBatasBawahTekananDarah"
        app:layout_constraintBottom_toBottomOf="@id/etBatasBawahTekananDarah"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Komentar"
        android:labelFor="@id/etKomentarTekananDarah"
        android:id="@+id/tvKomentarTekananDarah"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/purple"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etBatasBawahTekananDarah"
        android:layout_marginTop="13dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:id="@+id/etKomentarTekananDarah"
        android:inputType="text"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11sp"
        android:textColor="@color/purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvKomentarTekananDarah"
        android:background="@drawable/et_border_input"
        android:layout_marginTop="13dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddTekananDarahPasien"
        android:text="Tambah"
        android:textSize="16sp"
        android:elevation="10dp"
        android:outlineSpotShadowColor="@color/purple2"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:stateListAnimator="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn_input_bg"
        android:layout_marginBottom="14dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>