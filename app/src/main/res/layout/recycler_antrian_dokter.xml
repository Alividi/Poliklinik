<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menu_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:id="@+id/tvRecyclerViewNoAntrianDokter"
            android:textSize="47sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/purple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingTop="15dp"
            android:layout_marginStart="20dp"
            android:paddingBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRecyclerViewAntrianNamaPasienDokter"
            android:text="Dummy Dum"
            android:labelFor="@id/btnAcceptAntrianDokter"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/purple"
            android:textSize="18sp"
            android:layout_marginTop="26dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvRecyclerViewNoAntrianDokter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRecyclerViewAntrianNamaDokterDokter"
            android:text="dr. Dummy"
            android:fontFamily="@font/poppins_medium"
            android:textSize="11sp"
            android:textColor="@color/purple"
            app:layout_constraintTop_toBottomOf="@id/tvRecyclerViewAntrianNamaPasienDokter"
            app:layout_constraintStart_toEndOf="@id/tvRecyclerViewNoAntrianDokter"
            android:layout_marginStart="20dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAcceptAntrianDokter"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_done_green_bg"
            android:src="@drawable/ic_check_rounded_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>