<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="18dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pengajuanRMDokter"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/menu_bg">

        <TextView
            android:id="@+id/tvStatusPRM"
            android:layout_width="76dp"
            android:layout_height="10dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Belum Diizinkan"
            android:textColor="@color/dark_grey"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@id/dotStatusPRMDokter"
            app:layout_constraintStart_toEndOf="@id/dotStatusPRMDokter"
            app:layout_constraintTop_toTopOf="@id/dotStatusPRMDokter" />

        <View
            android:id="@+id/dotStatusPRMDokter"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/dot_bg_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tvNamaPasienPengajuanRMDokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nadira Belinda"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/purple"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/tvNomorPengajuanRMDokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NRM001"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:textColor="@color/purple"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNamaPasienPengajuanRMDokter"
            android:layout_marginStart="20dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDeclinePengajuanRMDokter"
            android:background="@drawable/btn_close_red_bg"
            android:src="@drawable/ic_close_round"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"
            android:padding="8dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnAcceptPengajuanRMDokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_done_green_bg"
            android:padding="8dp"
            android:src="@drawable/ic_check_rounded_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnDeclinePengajuanRMDokter"
            android:layout_marginEnd="7dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>