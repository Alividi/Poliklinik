<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="18dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/jadwalCheckUpDokter"
        android:layout_width="0dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/menu_bg">

        <TextView
            android:id="@+id/tvJamJadwalCheckUpDokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="25sp"
            android:textColor="@color/purple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/tvNamaPasienJadwalCheckUpDokter"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Ajeng Zalfa"
            android:labelFor="@id/btnHapusJadwalCheckUpDokter"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="17sp"
            android:textColor="@color/purple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvJamJadwalCheckUpDokter"
            android:layout_marginStart="22dp"
            android:layout_marginTop="22dp"/>

        <TextView
            android:id="@+id/tvNamaDokterJadwalCheckUpDokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dr. Angelina"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/purple"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/tvNamaPasienJadwalCheckUpDokter"
            app:layout_constraintStart_toEndOf="@id/tvJamJadwalCheckUpDokter"
            android:layout_marginStart="22dp"/>

        <View
            android:id="@+id/dotJadwalCheckUpDokter"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/dot_bg_lightblue"
            app:layout_constraintTop_toTopOf="@id/tvJenisJadwalCheckUpDokter"
            app:layout_constraintBottom_toBottomOf="@id/tvJenisJadwalCheckUpDokter"
            app:layout_constraintStart_toEndOf="@id/tvJamJadwalCheckUpDokter"
            android:layout_marginStart="22dp"
            android:layout_marginTop="-2dp"/>

        <TextView
            android:id="@+id/tvJenisJadwalCheckUpDokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical Check Up"
            android:fontFamily="@font/poppins_medium"
            android:textSize="9sp"
            android:textColor="#8ED2E2"
            app:layout_constraintStart_toEndOf="@id/dotJadwalCheckUpDokter"
            app:layout_constraintTop_toBottomOf="@id/tvNamaDokterJadwalCheckUpDokter"
            android:layout_marginStart="8dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHapusJadwalCheckUpDokter"
            android:background="@drawable/btn_close_red_bg"
            android:src="@drawable/ic_close_round"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"
            android:padding="8dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnDoneJadwalCheckUpDokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_done_green_bg"
            android:padding="8dp"
            android:src="@drawable/ic_check_rounded_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnHapusJadwalCheckUpDokter"
            android:layout_marginEnd="7dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>